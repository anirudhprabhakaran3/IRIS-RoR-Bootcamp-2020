<!DOCTYPE html>
<html>
  <head>
    <title>Blogspot</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body style="padding:0; margin: 0;">

    <div class="page-container" style="position: relative; min-height: 100vh;">

      <div class="content-wrap" style="padding-bottom: 5rem;">

    <nav class="navbar navbar-fixed-top navbar-expand-lg navbar-dark bg-primary" >
      <%= link_to "Anirudh's Blog", root_path, class: 'navbar-brand' %>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <%= link_to 'All Articles', articles_path, class: 'nav-link' %>
          </li>
          <% if can? :create, Article %>
            <li class="nav-item">
              <%= link_to 'New Article', new_article_path, class: 'nav-link' %>
            </li>
          <% end %>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if current_user %>
            <span class="navbar-text">Logged in as <%= current_user.email %></span>
            <%= link_to 'Log Out', logout_path, method: :delete, class: 'nav-link' %>
          <% else %>
            <%= link_to 'Sign Up', signup_path, class: 'nav-link' %>
            <%= link_to 'Log In', login_path, class: 'nav-link' %>
          <% end %>
        </ul>
      </div>
    </nav>

<% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
<% end %>

<% if alert %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <%= alert %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
      </button>
    </div>
<% end %>
<div class="content" style="padding-top: 2%;" >
  <%= yield %>
</div>

</div>
        <div class="footer container-fluid bg-primary" style="color: white; position: absolute; bottom: 0; width: 100%; height: 5rem; text-align:center; display: flex; justify-content: center; align-items: center">
          <p class="h2">Made by Anirudh Prabhakaran.</p>
        </div>

    </div>

  </body>
</html>
